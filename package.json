{
    "name":  "ngi-capital-root",
    "private":  true,
    "workspaces":  [
                       "apps/*",
                       "packages/*"
                   ],
  "scripts":  {
                    "e2e":  "npx playwright test -c e2e/playwright.config.ts",
                    "e2e:accounting":  "npx playwright test -c e2e/playwright.config.ts e2e/tests/accounting-*.spec.ts",
                    "e2e:accounting:headed":  "npx playwright test -c e2e/playwright.config.ts e2e/tests/accounting-*.spec.ts --headed",
                    "backfill:metrics":  "node scripts/backfill_metrics.js",
                    "predeploy:check":  "node tools/predeploy-check.cjs",
                    "prepare": "husky install"
                },
    "dependencies":  {
                         "@clerk/nextjs":  "^6.31.6"
                     },
    "devDependencies":  {
                            "@playwright/test":  "^1.47.2",
                            "@types/react":  "18.3.17",
                            "@types/react-dom":  "18.3.7",
                            "@types/better-sqlite3":  "^7.6.13",
                            "better-sqlite3":  "^9.4.3",
                            "dotenv":  "^16.4.5",
                            "ts-node":  "^10.9.2",
                            "typescript":  "^5.6.3",
                            "yahoo-finance2":  "^2.11.4",
                            "postcss-value-parser":  "^4.2.0",
                            "husky": "^9.1.3",
                            "lint-staged": "^15.2.10",
                            "prettier": "^3.1.0"
                        },
    "overrides":  {
                      "@types/react":  "18.3.17",
                      "@types/react-dom":  "18.3.7",
                      "cross-spawn":  "7.0.5"
                  }
    ,
    "lint-staged": {
      "*.{js,jsx,ts,tsx,css,md,json}": [
        "prettier --write"
      ],
      "*.py": [
        "ruff check --fix --exit-non-zero-on-fix || true",
        "black --check || true"
      ]
    }
}
